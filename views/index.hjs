<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <link rel="stylesheet" href="style.css" />
        <script src="client.js"></script>
        <title>Light</title>
    </head>
<body>
  {{#devices}}
  <h4>{{name}}</h4>
  <div class="buttonbar">
    <button id="toggle-{{index}}" type="button" class="_button switch-button">Toggle</button>
    <button id="on-{{index}}" class="_button switch-button-half">On</button>
    <button id="off-{{index}}" class="_button switch-button-half">Off</button>
  </div>
  {{/devices}}
</body>
</html>
